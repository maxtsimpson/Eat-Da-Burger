<h1>Burgers</h1>

<h3>Make a burger or eat one</h3>

<ul>
  {{#each burgers}}
	{{#unless devoured}}
  	<li id="{{_id}}">
  	   <p>Name: {{burger_name}}</p>
       <p>Devoured: {{devoured}}</p>
       <button class="eat" data-name="{{name}}" data-id="{{_id}}">Eat me</button>
  	</li>
	{{/unless}}
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="task"></textarea>

	<button type="submit">Submit</button>
</form>


